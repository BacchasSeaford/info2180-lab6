<!DOCTYPE html> 
<html>
<head>
	<meta charset="utf-8" />
	<script src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="style.css" />
</head>

<script type="text/javascript">

$(document).ready(function(){
	$("button").on('click', search);
});
function search(){
	   	var httpRequest = new XMLHttpRequest();
	   	var theInput = document.getElementById('txtvarInput').value;
		var url='request.php?q='+ theInput;
		httpRequest.onreadystatechange = message;
		httpRequest.open('GET',url);
		httpRequest.send();
}
function message(){
		if (this.readyState === XMLHttpRequest.DONE) {
	 		if (this.status === 200) {
	 			var def = this.responseText;
	 		document.getElementById('log').innerHTML +=	(def);
		 	} 
		 	}
		 	}

</script>

<body>
<div id="log">
<input id="txtvarInput" type="text"/> <button type="button"> Search </button>
</div>

</body>

</html>